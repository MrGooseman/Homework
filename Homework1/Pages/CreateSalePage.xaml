<Page x:Class="Homework1.Pages.CreateSalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Homework1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Create new sale">

    <Grid Width="400" Height="200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Enter the name of product: " Style="{StaticResource LabelStyle}"/>
        <Label Content="Value: " Grid.Row="1" Style="{StaticResource LabelStyle}"/>
        <Label Content="Price: " Grid.Row="2" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Column="1"/>
        <TextBox Grid.Column="1" Grid.Row="1"/>
        <TextBox Grid.Column="1" Grid.Row="2"/>
        <Button x:Name="CloseButton" Content="Close" Grid.Row="3" Style="{StaticResource ButtonColorStyle}"/>
        <Button x:Name="CreateButton" Content="Create" Grid.Row="3" Grid.Column="1" Style="{StaticResource ButtonColorStyle}"/>
    </Grid>
</Page>
